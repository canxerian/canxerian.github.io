<style is:global>
	@import url("https://fonts.googleapis.com/css2?family=Hanken+Grotesk:ital,wght@0,100..900;1,100..900&display=swap");

	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	@layer base {
		body {
			@apply w-full max-w-[1200px] m-auto min-h-screen flex flex-col gap-16 pt-2 pb-12 px-8;
		}

		h1 {
			@apply font-hg text-3xl;
		}

		h2 {
			@apply font-hg text-sm;
		}

		a {
			@apply font-hg text-sm;
		}
	}
</style>
