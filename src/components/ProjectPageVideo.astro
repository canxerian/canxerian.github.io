---
interface Props {
  src: string;
  aspect?: "square" | "video";
}

const { src, aspect } = Astro.props;
---

<figure
  class=`${aspect === "square" && "w-full bg-gray-950 aspect-square flex justify-center align-middle"}`
>
  <video autoplay loop muted class="w-full">
    <source src={src} type="video/mp4" />
  </video>
</figure>
