---
import ProjectCard from "../components/ProjectCard.astro";
import Layout from "../layouts/Layout.astro";
import vidCuddlebook from "../assets/cuddlebook-01.mp4";
import vidArctic from "../assets/arctic-01.mp4";
import vidLusion from "../assets/lusion-01.mp4";
---

<Layout>
	<section class="flex flex-col gap-4">
		<h2 class="tracking-[0.8rem]">ABOUT</h2>
		<p>I'm a full stack programmer and designer who builds 3D experiences</p>
	</section>
	<section class="flex flex-col gap-4">
		<h2 class="tracking-[0.8rem]">PROJECTS</h2>
		<!-- <div class="grid grid-cols-1 md:grid-cols-3 gap-4"> -->
		<div class="flex flex-col gap-20">
			<ProjectCard
				title="Cuddlebook"
				videoSrc={vidCuddlebook}
				href="/projects/cuddlebook"
			/>
			<ProjectCard
				title="Arctic Sea Ice"
				videoSrc={vidArctic}
				href="/projects/arctic-sea-ice"
			/>
			<ProjectCard
				title="Lusion, reverse engineered"
				videoSrc={vidLusion}
				href="/projects/lusion-reverse-engineered"
			/>
			<ProjectCard
				title="Lusion, reverse engineered"
				videoSrc={vidLusion}
				href="/projects/lusion-reverse-engineered"
			/>
		</div>
	</section>
</Layout>
